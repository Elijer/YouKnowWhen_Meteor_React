html
    box-sizing: border-box

*, *:before, *:after
    box-sizing: inherit

body
    float center
    background light-grey
    padding: 120px 0 150px
    font-family: 'Open Sans', sans-serif

footer
  color #FFF
  background: #D8D8D8
  padding 20px 5%
  fixed bottom left
  width 100%
  height 70px
  z-index: z.header
  shadow-level(2)
  clearfix()

header
    color #FFF
    background: purp
    padding 20px 5%
    fixed top left
    width 100%
    height 14%
    z-index: z.header
    shadow-level(2)
    clearfix()
    img
        height 110px
    h2
        margin 0
        font-weight 100
        font-size 1.6em
        float left
    nav
        float right
        a
            color: #FFF
            text-decoration: none
            line-height: 50px
            padding-top: 1.4em
            font-size: 160%
            display: inline-block
            border-bottom 4px solid transparent
            trans()
            + a
                margin-left: 30px
            &:hover
                border-color teal
            @media only screen and (max-width: 872px)
              font-size: 120%
              line-height: 4em
            @media only screen and (max-width: 765px)
              visibility hidden

.category-phrase-dashboard
    text-align center

input, select, textarea
    color purp
    background #FFF
    border solid 2px light-grey
    border-radius 2px
    font-weight 800
    padding 6px 10px
    margin-bottom 0px
    margin-top 14px
    position relative
    outline 2px
    .suggestionsContainer
        text-align left
        padding 0px 10px
        margin-left -8px
        margin-right -8px
        position absolute
        width 13.2em
        z-index 1

.suggestionsContainer
    text-align left


.selectedtrue
          display block
          background light-teal
          margin-top 0px
          padding 4px 10px
          border-radius 2px
          color darker-grey

.selectedfalse
          display block
          background beigey
          margin-top 0px
          padding 4px 10px
          border-radius 2px
          color darker-grey

.phrases
  padding-bottom 400px

.tile
  color white
  padding 1%
  border 1px dark-purp solid
  margin 1%
  background purp
  shadow-level(1)
  width 200px
  height 200px
  padding-bottom 18%
  display inline-block
  float left
  text-align left
  word-wrap normal
  trans()
  &:hover
    background dark-purp
    shadow-level(4)
    .btn, button
      transition visibility none
      //visibility visible  (this is to make the delete button appear only when tile hovered over)
      visibility visible

.phraseDiv
  background light-purp
  padding 10px 12px

.phraseText
    font-size 160%
    word-wrap break-word

.btn, button
    float right
    display inline-block
    cursor pointer
    background purp
    color #FFF
    text-decoration none
    text-transform uppercase
    padding 5px 15px
    //the margin-left is for the yes, cancel buttons on the modal
    margin-left 10px
    border solid 3px purp
    border-radius 2px
    font-weight 800
    shadow-level(1)
    trans()
    &:hover
        background @background - 20
        border-color @background
        shadow-level(2)
    &.btn-cancel
        visibility hidden
        color #FFF
        background transparent
        border solid 2px #FFF
        opacity 0.4
        shadow-level(-1)
        &:hover
            background red
            color #FFF
            opacity 1
            shadow-level(2)
            border-color @background



.panel-body
    .form-group
        lost-column 1/2

input::-webkit-input-placeholder
    color: #ddd
input:-moz-placeholder
    color: #ddd
input::-moz-placeholder
    color: #ddd
input:-ms-input-placeholder
    color: #ddd

#login-dropdown-list
    right -1px
    left auto

#login-sign-in-link, #login-name-link
    margin-left: 30px


@keyframes complete
    0%
        opacity 0
        transform translate3d(0,-30px,0)
    100%
        opacity 1
        transform translate3d(0, 0,0)

.phraseLoad-enter
    opacity: 0
    animation: slideIn 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

.phraseLoad-leave
    animation: slideOut 0.4s cubic-bezier(0.165, 0.84, 0.44, 1)
    opacity: 1.0

@keyframes slideIn
    0%
        opacity 0
        transform translate3d(-50px, 0, 0)
    100%
        opacity 1
        transform translate3d(0, 0, 0)

@keyframes slideOut
    0%
        opacity 1
        transform translate3d(0, 0, 0)
    100%
        opacity 0
        transform translate3d(50px, 0, 0)

@keyframes slideUp
    0%
        opacity 0
        transform translate3d(0, 60px, 0)
    100%
        opacity 1
        transform translate3d(0, 0, 0)

.route-enter, .route-appear
    opacity: 0
    animation: slideIn 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

.route-leave
    animation: slideOut 0.4s cubic-bezier(0.165, 0.84, 0.44, 1)
    opacity: 1.0

.route-appear
    opacity: 0
    animation: slideUp 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)


